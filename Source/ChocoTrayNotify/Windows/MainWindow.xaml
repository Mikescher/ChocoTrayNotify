<Window x:Class="ChocoTrayNotify.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:conv="clr-namespace:ChocoTrayNotify.Converter" 
        xmlns:ctrl="clr-namespace:ChocoTrayNotify.Controls" xmlns:pages="clr-namespace:ChocoTrayNotify.Pages"
        WindowStartupLocation="CenterScreen"
        Icon="/icons/icon_on.png"
        Title="ChocoTrayNotify" Height="750" Width="550">
    <Grid>
        <TabControl>
            <TabItem Header="Status">
                <pages:PageStatus x:Name="PageStatus" />
            </TabItem>
            <TabItem Header="Settings">
                <pages:PageSettings x:Name="PageSettings" />
            </TabItem>
            <TabItem Header="Log">
                <pages:PageLog x:Name="PageLog" />
            </TabItem>
            <TabItem Header="About">
                <pages:PageAbout x:Name="PageAbout" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
